<script>
  var nowPages = 1;
  var pageRange = 5;
  var currentPage = 1;
  var pageLevel = 0;
  var totalPage = 0;
  var sMemberId = '';
  var data;

  function init() {
    function open_btc_cancel_reason_withdrawal(url) {
      $('.popup-bg').fadeIn(200, function () {
        $('#popup.forfeit-cont').fadeIn(500);
        $('#btc-forfeit').attr('src', url);
      });
    }

    function close_btc_cancel_reason_withdrawal(url) {
      $('#popup.forfeit-cont').fadeOut(500, function () {
        $('.popup-bg').fadeOut(200);
      });
    }
    $('.btn-forfeit').click(function () {
      $('.popup-bg').fadeIn(200, function () {
        $('#popup.forfeit-cont').fadeIn(500);
      });
    });
    $('#popup.forfeit-cont a.close').click(function () {
      $('#popup.forfeit-cont').fadeOut(500, function () {
        $('.popup-bg').fadeOut(200);
      });
    });
  }


  
  $(document).ready(() => {
    getList();
    // Balance();
  });

  function getList() {
    $('tbody[name=tableData]').empty();
    var param = {};
    param['D_SDATE'] = $('#datepicker1').datepicker('getDate')
      ? $('#datepicker1').datepicker('getDate').format('yyyy-MM-dd')
      : ' ';
    param['D_EDATE'] = $('#datepicker2').datepicker('getDate')
      ? $('#datepicker2').datepicker('getDate').format('yyyy-MM-dd')
      : ' ';
    param['SECHER1_TITLE'] = $('#selType').val();
    param['UN_ESECHER_TEXT'] =
      $('#selText').val() == '' ? ' ' : $('#selText').val();
    param['CNT'] = 'true';
    param['GUBUN'] = 'TRX'; 
    param['CUR_PAGING'] = currentPage + '';
    param['PAGING_NO'] = '10';
    reqApiList({
      URL: 'AgetpurchaseList',
      PARAM: param,
    }).then((data) => {
      if (data.CNT.ALL_CNT != 0) {
        cnt = data.CNT.ALL_CNT;
        totalPage = Math.floor(cnt / 10) + (cnt % 10 != 0 ? 1 : 0);
        pageLevel = Math.floor(currentPage / (pageRange + 1));
        nowPages =
          totalPage - pageLevel * 5 > 5 ? 5 : totalPage - pageLevel * 5;
      }
      for (var i = 0; i < data.APURCLIST.length; i++) {
        var innerHtml = '';
        innerHtml += '<tr>';
        innerHtml += '<td>' + data.APURCLIST[i].ROW_NOMBER + '</td>';
        innerHtml += '<td>' + data.APURCLIST[i].D_DATE + '</td>';
        innerHtml += '<td>' + data.APURCLIST[i].D_UID + '</td>';
        innerHtml += '<td>' + data.APURCLIST[i].D_NAME_H + '</td>';
        innerHtml += '<td>' + data.APURCLIST[i].D_HP + '</td>';
        innerHtml += '<td>' + data.APURCLIST[i].P_UID + '</td>';
        innerHtml += '<td>' + data.APURCLIST[i].D_GNAME + '</td>';
        innerHtml += '<td>' + data.APURCLIST[i].D_PRICE + '</td>';
        innerHtml += '<td>' + data.APURCLIST[i].M_KRATE + '</td>';
        innerHtml += '<td>' +  commonLib.comma(data.APURCLIST[i].M_KAMOUNT); + '</td>';
        innerHtml += '<td>' + data.APURCLIST[i].M_BSENDER + '</td>';
      
         
 


        innerHtml +=
          '<td><a class="btn-table-change btn-forfeit" onClick="getPuchaseInfo(\''+
          data.APURCLIST[i].P_LOG +
          '\')" class="btn-table-change">매출정보확인</a> ';

        innerHtml +=
          '<a class="btn-table-change btn-forfeit" onClick="getMeberCancel(\''+
          data.APURCLIST[i].P_LOG +
          ",'" +
          data.APURCLIST[i].P_LOG +
          '\')">취소/보류</a></td>';
        innerHtml += '</tr>';
        $('tbody[name=tableData]').append(innerHtml);
      }
      var innerHtml = '';
      innerHtml +=
        '<li class="" onclick="btnPage(\'bef\')"> <a href="#"><i class="fa fa-angle-left"></i></a> </li>';
      $('ul[name=paging]').empty();
      for (var i = 1; i <= nowPages; i++) {
        if (currentPage == i) {
          innerHtml +=
            '<li onclick="movePage(' +
            i +
            ')"> <a class="active">' +
            (pageLevel * 5 + i) +
            '</a> </li>';
        } else {
          innerHtml +=
            '<li onclick="movePage(' +
            i +
            ')"> <a>' +
            (pageLevel * 5 + i) +
            '</a> </li>';
        }
      }
      innerHtml +=
        '<li onclick="btnPage(\'next\')"> <a href="#"><i class="fa fa-angle-right"></i></a> </li>';
      $('ul[name=paging]').append(innerHtml);
      init();
    });
  }

  async function getPuchaseInfo(idx) {
