     } else  {   
         alert('구매대행 실패하였습니다.');

    }
    
    }    //   case 1:
    //     break;
    //     alert('전송에 실패 하였습니다.');
    //   case 2:
    //     alert('탈퇴한 회원입니다');
    //     break;
    //   case 3:
    //     alert('전송에 실패하였습니다.');
    //     break;
    //   case 4:
    //     alert('보유코인이 존재합니다');
    //     break;
    //   case 5:
    //     alert('매칭대기중인 코인이 존재합니다');
    //     break;
    // }
    

  function movePage(page) {
    currentPage = pageLevel * 5 + page;
    getList();
  }

  function btnPage(pos) {
    if (pos == 'bef' && currentPage > 1) {
      currentPage--;
    } else if (pos == 'next' && currentPage < totalPage) {
      currentPage++;
    }
    getList();
  }
  
</script>
